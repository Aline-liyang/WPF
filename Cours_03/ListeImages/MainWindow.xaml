                    <!--<TextBlock Margin="10" Text="ListBox Item #1"></TextBlock >-->
                    <TextBlock Margin="10" Text="ListBox Item #1"/>
                </StackPanel>
            </ListBoxItem>
            <ListBoxItem>
                <StackPanel Orientation="Horizontal">
                    <Image Source="Images\client.png" Width="20" Height="20"/>
                    <TextBlock Margin="10">ListBox Item #2</TextBlock>
                </StackPanel>
            </ListBoxItem>
            <ListBoxItem>
                <StackPanel Orientation="Horizontal">
                    <Image Source="Images\interest.png" Width="20" Height="20" />
                    <TextBlock Margin="10">ListBox Item #3</TextBlock>
                </StackPanel>
            </ListBoxItem>
        </ListBox>

    </Grid>
</Window>
