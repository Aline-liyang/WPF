        mc:Ignorable="d"
        Title="ListeImages" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <ListBox>
            <ListBoxItem>
                <StackPanel Orientation="Horizontal">
                    <Image Source="Images\cheque.png" Width="20" Height="20"/>
